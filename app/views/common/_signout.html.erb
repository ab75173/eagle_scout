<% if signed_in? %>

  <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
    <li><%= link_to "My Profile", current_user, class: "btn btn-default", id: "sm-homebutton" %></li>
    <li><%= f.submit "Sign out", id: 'signout', class: "btn btn-default", id: "sm-homebutton" %></li>
  <% end %>

  <!-- <%= link_to "Home", root_path %> -->

<% else %>

  <li><%= link_to "Sign In", signin_path, class: "btn btn-default", id: "sm-homebutton" %></li> <li><%= link_to "Sign up", signup_path, class: "btn btn-default", id: "sm-homebutton" %></li>

<% end %>
