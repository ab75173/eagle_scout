<div class="col-sm-8" id="create-a-user">
  <h1>Edit <%= @user.name %></h1>
  <%= render "user_form" %>

  <hr>

  <%= form_for @user, method: 'delete' do |f| %>
    Delete your account? <%= f.submit "Delete", class: "btn btn-default" %>
  <% end %>

  <hr>

  <%= link_to "Cancel", @user, class: "btn btn-default" %>
</div>
